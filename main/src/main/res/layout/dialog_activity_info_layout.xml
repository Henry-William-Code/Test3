<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/x40"
    android:layout_marginEnd="@dimen/x40"
    android:paddingBottom="@dimen/y100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            android:adjustViewBounds="true"
            android:background="@mipmap/icon_tiecard_top"
            android:gravity="center"
            android:text="@string/activity_bind_info" />



    </RelativeLayout>


    <View
        android:id="@+id/btn_close"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/y60"
        android:layout_alignParentEnd="true" />

    <com.qgnix.common.views.BigImageView
        android:id="@+id/iv_new_reg_bonus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_right_close"
        android:layout_below="@id/btn_close" />
</RelativeLayout>