<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ResetTranslationPwdAct">

    <include layout="@layout/view_title" />

    <LinearLayout
        android:id="@+id/ll_select_country"
        style="@style/ll_setting_item_style"
        android:layout_marginTop="@dimen/y20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/input_country"
            android:singleLine="true"
            android:textColor="@color/textColor"
            android:textColorHint="@color/gray1"
            android:textSize="@dimen/text_size_30" />


        <TextView
            android:id="@+id/tv_country_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/default_country_name"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_30" />

        <ImageView style="@style/base_arrow_right" />

    </LinearLayout>

    <LinearLayout style="@style/ll_setting_item_style">

        <TextView
            android:id="@+id/tv_country_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x20"
            android:text="@string/country_code" />

        <EditText
            android:id="@+id/et_login_mobile_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:maxLength="10"
            android:hint="@string/reg_input_phone"
            android:inputType="phone"
            android:singleLine="true"
            android:textSize="@dimen/text_size_28" />

    </LinearLayout>

    <LinearLayout style="@style/ll_setting_item_style">

        <EditText
            android:id="@+id/et_check_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/reg_input_code"
            android:singleLine="true"
            android:textSize="@dimen/text_size_28" />

        <Button
            android:id="@+id/btn_check_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:text="@string/reg_get_code"
            android:textColor="@color/reg_btn_code"
            android:textSize="@dimen/text_size_28"/>
    </LinearLayout>

    <LinearLayout style="@style/ll_setting_item_style">

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/please_new_password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="@dimen/text_size_28" />

    </LinearLayout>

    <LinearLayout style="@style/ll_setting_item_style">

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/please_confirm_password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="@dimen/text_size_28" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_commit"
        style="@style/base_main_btn"
        android:text="@string/commit" />
</LinearLayout>