<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:background="#2d3041"
        android:gravity="center_vertical">


        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/magic_indicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/y60"
                android:layout_height="@dimen/y60"
                android:src="@mipmap/logo" />

            <TextView
                android:id="@+id/tv_center"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y30"
                android:layout_marginTop="-4dp"
                android:gravity="center_horizontal|top"
                android:letterSpacing="0.05"
                android:text="honor0.win"
                android:textColor="#e7af3e"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/iv_customer_services"
                android:layout_width="@dimen/y90"
                android:layout_height="match_parent"
                android:background="@null"
                android:padding="@dimen/x20"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_main_customer2" />

            <!--        <View-->
            <!--            android:layout_width="1dp"-->
            <!--            android:layout_height="22dp"-->
            <!--            android:background="@color/divider_lines2" />-->

            <ImageButton
                android:id="@+id/iv_change_lan"
                android:layout_width="@dimen/y90"
                android:layout_height="match_parent"
                android:background="@null"
                android:padding="@dimen/x20"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_yuyan2" />

            <!--        <View-->
            <!--            android:layout_width="1dp"-->
            <!--            android:layout_height="22dp"-->
            <!--            android:background="@color/divider_lines2" />-->

            <ImageButton
                android:id="@+id/iv_ranking"
                android:layout_width="@dimen/y90"
                android:layout_height="match_parent"
                android:background="@null"
                android:padding="@dimen/x20"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@mipmap/icon_live_user_home_2" />
        </LinearLayout>

    </RelativeLayout>

    <!--    <View style="@style/m_divider" />-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_promote"
            android:layout_width="@dimen/x120"
            android:layout_height="58dp"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="@dimen/x30"
            android:layout_marginBottom="@dimen/y40"
            android:src="@mipmap/icon_home_float_live" />
    </FrameLayout>
</LinearLayout>