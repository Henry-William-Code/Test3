<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/x100"
    android:layout_marginEnd="@dimen/x100"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y700"
        android:background="@drawable/bg_dialog_2"
        android:orientation="vertical"
        android:paddingStart="@dimen/x20"
        android:paddingEnd="@dimen/x20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:orientation="horizontal">

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Honor.win"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/x90"
                android:layout_height="match_parent"
                android:padding="@dimen/x30"
                android:src="@mipmap/icon_close_black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginEnd="@dimen/x20"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginBottom="@dimen/x20"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/x160"
                android:layout_marginEnd="@dimen/x20"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_invitation_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_logo"
                android:layout_toEndOf="@id/iv_logo"

                android:text="@string/invitation_code"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_logo"
                android:text="@string/share_tip"
                android:textSize="@dimen/text_size_24" />

            <TextView
                android:id="@+id/tv_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_logo"
                android:layout_toEndOf="@id/iv_logo"
                android:text="https://honor.win"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_24" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:layout_marginTop="@dimen/y30"
        android:background="@drawable/login_btn"
        android:text="@string/save" />

</LinearLayout>