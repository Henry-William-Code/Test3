<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/y20"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/y10"
    android:paddingBottom="@dimen/y10"
    android:paddingStart="@dimen/x20"
    android:paddingEnd="@dimen/x20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_ticket_icon"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:scaleType="fitXY"
            android:src="@mipmap/game_report01" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x20"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_30"
            tools:text="1111111" />
    </LinearLayout>

    <View
        style="@style/m_divider"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginBottom="@dimen/y10" />


    <LinearLayout style="@style/item_betting_record_ll">

        <TextView
            style="@style/item_betting_record_tag"
            android:text="@string/Betting_content" />

        <TextView
            style="@style/item_betting_record_tag"
            android:text="@string/odd_no" />

        <TextView
            style="@style/item_betting_record_tag"
            android:text="@string/Order_amount" />
    </LinearLayout>

    <LinearLayout style="@style/item_betting_record_ll">

        <TextView
            android:id="@+id/tv_content"
            style="@style/item_betting_record_tv"
            tools:text="0" />

        <TextView
            android:id="@+id/tv_odd"
            style="@style/item_betting_record_tv"
            tools:text="0" />

        <TextView
            android:id="@+id/tv_tou_money"
            style="@style/item_betting_record_tv"
            android:textColor="@color/global"
            tools:text="coin 0.00" />
    </LinearLayout>

    <LinearLayout
        style="@style/item_betting_record_ll">

        <TextView
            style="@style/item_betting_record_tag"
            android:text="@string/draw_number" />

        <TextView
            style="@style/item_betting_record_tag"
            android:text="@string/bet_time" />

        <TextView
            style="@style/item_betting_record_tag"
            android:text="@string/winning_status" />
    </LinearLayout>

    <LinearLayout style="@style/item_betting_record_ll">

        <TextView
            android:id="@+id/tv_bet_no"
            style="@style/item_betting_record_tv"
            tools:text="0" />

        <TextView
            android:id="@+id/tv_bet_time"
            style="@style/item_betting_record_tv"
            tools:text="2020-09-18" />

        <TextView
            android:id="@+id/tv_bet_status"
            style="@style/item_betting_record_tv"
            android:textColor="@color/global"
            tools:text="æ˜¯" />
    </LinearLayout>

    <LinearLayout
        style="@style/item_betting_record_ll">

        <TextView
            style="@style/item_betting_record_tag"
            android:text="@string/kj_no" />

        <TextView
            style="@style/item_betting_record_tag"
            android:text="@string/kj_time" />

        <TextView
            style="@style/item_betting_record_tag"
            android:text="@string/Amount_of_winning" />
    </LinearLayout>

    <LinearLayout style="@style/item_betting_record_ll">

        <TextView
            android:id="@+id/tv_kj_no"
            style="@style/item_betting_record_tv"
            tools:text="0" />

        <TextView
            android:id="@+id/tv_kj_time"
            style="@style/item_betting_record_tv"
            tools:text="2020-09-18" />

        <TextView
            android:id="@+id/tv_jiang_money"
            style="@style/item_betting_record_tv"
            android:textColor="@color/global"
            tools:text="coin 0.00" />
    </LinearLayout>
</LinearLayout>